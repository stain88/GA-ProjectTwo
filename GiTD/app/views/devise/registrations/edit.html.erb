<div class="container">
  <h2>User Settings</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-4">
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :username, required: true, label: false, placeholder: "Username", autofocus: true, input_html: {class: "form-control"} %>
          <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.input :age, label: false, placeholder: "Age", input_html: {class: "form-control"} %>
          <%= f.input :gender, label: false, placeholder: "Gender", input_html: {class: "form-control"} %>
          <%= f.input :bio, label: false, placeholder: "Any interesting description you want to share?", input_html: {class: "form-control"} %>
          <big class="hint">Gravatar:</big>
          <%= link_to "http://www.gravatar.com", target: "_blank" do %>
            <%= gravatar_tag current_user.email, size: 100 %>
          <% end %>
          <small class="hint">(click image to change)</small>
        </div>
      </div>
      <div class="col-md-2"></div>

      <div class="col-md-4">
        <div class="form-group">
          <%= f.input :profile_pic, label: false, placeholder: "Would you rather use your own avatar? Link to it here", input_html: {class: "form-control"} %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "Leave it blank if you don't want to change it", required: false, label: false, placeholder: "New password", input_html: {class: "form-control"}, hint_html: {class: "hint"} %>
          <%= f.input :password_confirmation, required: false, label: false, placeholder: "Confirm new password", input_html: {class: "form-control"} %>
          <%= f.input :current_password, hint: "We need your current password to confirm your changes", required: true, label: false, placeholder: "Current password", input_html: {class: "form-control"}, hint_html: {class: "hint"} %>
        </div>
      </div>
      <div class="col-md-1"></div>
    </div>
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-4">
        <%= link_to :back do %>
          <button class="btn btn-info btn-block">Back</button>
        <% end %>
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-4">
        <div class="form-actions">
          <%= f.button :submit, "Update", class: "btn btn-success btn-block" %>
        </div>
      </div>
      <div class="col-md-1"></div>
    </div>
  <% end %>
</div>

