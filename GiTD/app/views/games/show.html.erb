<div class="jumbotron jt-custom">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
      <h1><%= @game.title %></h1>
      </div>
      <div class="col-md-6">
        <h3>
          By <%= @game.user.username %>
          <% if current_user == @game.user || current_user.try(:admin?) || current_user.try(:moderator?) %>
            <%= link_to edit_game_path(@game) do %>
              <button class="btn btn-warning">Edit</button>
            <% end %>
          <% end %>
          <%= link_to games_path do %>
            <button class="btn btn-info">Back</button>
          <% end %>
          <% if current_user.try(:admin?) %>
            <%= link_to @game, method: :delete, data: {confirm: "Are you sure?"} do %>
              <button class="btn btn-danger">Delete</button>
            <% end %>
          <% end %>
        </h3>
        <h5><%= @game.description %></h5>
      </div>
    </div>
    <div class="row">
      <% if !@game.external_link.blank? %>
        <% if @game.external_link=~/^.*kongregate.*$/ %>
          <h2><%= link_to "Play on Kongregate", @game.external_link, target: "_blank" %></h2>
        <% elsif @game.external_link=~/^.*fastswf.*$/ %>
          <h2><%= link_to "Play on Fastswf.com", @game.external_link, target: "_blank" %></h2>
        <% else %>
          <h2><%= link_to "Play externally", @game.external_link, target: "_blank" %></h2>
        <% end %>
      <% end %>
    </div>
    <div class="row">
      <% if !@game.game_file.blank? %>
        <embed src="<%= @game.game_file_url %>" width="<%= @game.width %>" height="<%= @game.height %>" />
      <% elsif !@game.url.blank? %>
        <iframe width="<%= @game.width %>" height="<%= @game.height %>" src="<%= @game.url %>" frameborder="0" allowfullscreen></iframe>
      <% end %>
    </div>
    <div class="row">
      <%= commontator_thread(@game) %>
    </div>
  </div>
</div>
