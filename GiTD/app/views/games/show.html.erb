<div class="jumbotron jt-custom">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
      <h1><%= @game.title %></h1>
      </div>
      <div class="col-md-6">
        <h3>
          By <%= @game.user.username %>
          <% if current_user == @game.user || current_user.try(:admin?) %>
            <%= link_to edit_game_path(@game) do %>
              <button class="btn btn-warning">Edit</button>
            <% end %>
          <% end %>
          <%= link_to games_path do %>
            <button class="btn btn-info">Back</button>
          <% end %>
        </h3>
        <h5><%= @game.description %></h5>
      </div>
    </div>
    <div class="row">
      <% if !@game.kong_link.blank? %>
        <h2><%= link_to "Play on Kongregate", @game.kong_link, target: "_blank" %></h2>
      <% end %>
    </div>
    <div class="row">
      <% unless @game.game_file.blank? %>
        <embed src="<%= @game.game_file_url %>" width="<%= @game.width %>" height="<%= @game.height %>" />
      <% end %>
      <% unless @game.url.blank? %>
        <iframe width="<%= @game.width %>" height="<%= @game.height %>" src="https://<%= @game.url %>" frameborder="0" allowfullscreen></iframe>
      <% end %>
    </div>
  </div>
</div>
