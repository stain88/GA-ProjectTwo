<div class="jumbotron jt-custom">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <%= get_pic @user, 200 %>
      </div>
      <div class="col-md-4">
        <h3><%= @user.username %></h3>
        <p>Age: <%= @user.age %></p>
        <p>Gender: <%= @user.gender %></p>
      </div>
      <div class="col-md-4">
        <h3>About me: </h3>
        <small><%= @user.bio %></small>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">Friends (<%= @user.active_friends.size %>)</div>
        <div class="panel-body">
          <% @user.active_friends.last(16).each do |user| %>
            <%= link_to user_path(user.username) do %>
              <%= get_pic user, 40 %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      Stuff about posts and comments to go here
      <% @comments.each do |comment| %>
        Wrote <%= comment %>
      <% end %>
      <% @posts.each do |post| %>
        Posted <%= post %> in forum
      <% end %>
      <%#= Forem::Post.where(user_id: @user).each do |post| %>
        Posted <%#= post %> in forum
      <%# end %>
    </div>
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">Games (<%= @user.games.size %>)</div>
        <div class="panel-body">
          <ul class="game">
            <% @user.games.each do |game| %>
              <%= link_to game_path(game.title) do %>
                <li><button class="btn btn-sm btn-custom"><%= game.title %></button></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>