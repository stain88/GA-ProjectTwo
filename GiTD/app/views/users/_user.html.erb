<div class="col-md-3">
  <div class="thumbnail">
    <%= link_to user_path(user.username) do %>
      <%= user.profile_pic.blank? ? (gravatar_tag user.email, size: 200) : (image_tag user.profile_pic, size: "200") %> 
    <% end %>
    <div class="caption">
      <h3><%= user.username %></h3>
      <% if current_user %>
        <p><%= action_buttons(user) %></p>
      <% end %>
    </div>
  </div>
</div>